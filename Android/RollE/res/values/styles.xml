<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<item name="android:icon">@drawable/ic_home</item>
		<item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
		<item name="android:textViewStyle">@style/CustomTextViewStyle</item>
		<item name="android:editTextStyle">@style/CustomEditTextStyle</item>
		<item name="android:background">#ff000000</item>
    </style>
    
    <style name="CustomActionBarStyle" parent="@android:style/Widget.ActionBar">
		<item name="android:displayOptions">useLogo|showHome</item>
		<item name="android:background">#ff000000</item>
	</style>
    
    <style name="CustomTextViewStyle" parent="@android:style/Widget.TextView">
		<item name="android:textColor">#ff888888</item>
	</style>
    
    <style name="CustomEditTextStyle" parent="@android:style/Widget.EditText">
		<item name="android:textColor">#ff888888</item>
		<item name="android:background">#11ffffff</item>
		<item name="android:padding">5px</item>
	</style>
</resources>